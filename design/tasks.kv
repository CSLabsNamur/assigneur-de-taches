<Tasks>:
    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            orientation: "vertical"

            AnchorLayout:
                Image:
                    source: "../design/logo.png"
                    size: self.texture_size

            AnchorLayout:
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 0.8, 0.8

                    Button:
                        text: "Members"
                        on_press: app.sm.switch_to(app.members)
                    Button:
                        text: "Tasks"
                        on_press: app.sm.switch_to(app.tasks)
                    Button:
                        text: "Output"
                        on_press: app.sm.switch_to(app.output)

            AnchorLayout:
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 0.8, 0.8

                    Button:
                        text: "Add Member"
                    Button:
                        text: "[b]Generate[/b]"
                        markup: True


        BoxLayout:
            Label:
                text: "2\nTASKS"


        BoxLayout:
            Label:
                text: "3"
